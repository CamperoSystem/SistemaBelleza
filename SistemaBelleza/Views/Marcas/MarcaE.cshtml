@model SistemaBelleza.Models.marca

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    ViewBag.Title = "Editar Marca";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2 class="text-center text-primary mb-4"><i class="bi bi-pencil-fill"></i> Editar Marca</h2>

<div class="container">
    @using (Html.BeginForm("Editar", "Marcas", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.id_marca)

        <div class="mb-3">
            @Html.LabelFor(m => m.nombre)
            @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", placeholder = "Ingrese el nombre de la marca", required = "required" })
            @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.descripcion)
            @Html.TextAreaFor(m => m.descripcion, new { @class = "form-control", rows = 3, placeholder = "Ingrese una descripción breve", required = "required" })
            @Html.ValidationMessageFor(m => m.descripcion, "", new { @class = "text-danger" })
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check2-square"></i> Guardar Cambios
            </button>
            <a href="@Url.Action("Index", "Marcas")" class="btn btn-secondary ms-2">Cancelar</a>
        </div>
    }
</div>
