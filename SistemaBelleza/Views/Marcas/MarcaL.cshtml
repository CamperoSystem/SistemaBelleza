@model IEnumerable<SistemaBelleza.Models.marca>

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    ViewBag.Title = "Marcas";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2 class="text-center my-4 text-primary"><i class="bi bi-tags-fill"></i> Gestión de Marcas</h2>

<div class="text-end mb-3">
    <a href="@Url.Action("Crear", "Marcas")" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nueva Marca
    </a>
</div>

<table class="table table-bordered table-hover align-middle shadow-sm">
    <thead class="table-primary text-center">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No hay marcas registradas.</td>
            </tr>
        }
        else
        {
            foreach (var marca in Model)
            {
                <tr>
                    <td>@marca.id_marca</td>
                    <td>@marca.nombre</td>
                    <td>@marca.descripcion</td>
                    <td class="text-center">
                        <a href="@Url.Action("Editar", "Marcas", new { id = marca.id_marca })" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="@Url.Action("Eliminar", "Marcas", new { id = marca.id_marca })" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
