@{
    Layout = null;
    var user = Session["usuario"];
    if (user == null)
    {
        Response.Redirect("~/ControladorAcceso/IniciarSesion");
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Panel de Administración</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/master.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- Botón de menú -->
    <button id="toggle-btn" onclick="toggleSidebar()" aria-label="Mostrar u ocultar menú">
        <i class="bi bi-list fs-4"></i> <!-- Ícono más grande -->
    </button>

    <!-- Sidebar -->
    <div id="sidebar">
        <div class="sidebar-header">
            <i class="bi bi-person-fill-gear fs-3 me-2"></i> PANEL DE ADMINISTRADOR
        </div>
        <a href="@Url.Action("Dashboard", "PanelAdmin")">📊 Dashboard</a>
        <a href="@Url.Action("Index", "Usuarios")">👤 Usuarios</a>
        <a href="@Url.Action("Index", "Marcas")">🏷 Marcas</a>
        <a href="@Url.Action("Index", "Categorias")">🗂 Categorías</a>
        <a href="@Url.Action("Index", "Subcategorias")">📁 Subcategorías</a>
        <a href="@Url.Action("Index", "Productos")">🧴 Productos</a>
        <a href="@Url.Action("Index", "Reportes")">📊 Reportes</a>
        <a href="@Url.Action("CerrarSesion", "ControladorAcceso")">🚪 Cerrar sesión</a>
    </div>

    <!-- Encabezado superior -->
    <div id="header">
        <h1>Tienda de Belleza - Sistema Administrativo</h1>
    </div>

    <!-- Contenido dinámico -->
    <div id="main">
        @RenderBody()
    </div>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/master.js"></script>
    <script src="~/Scripts/dashboard.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
