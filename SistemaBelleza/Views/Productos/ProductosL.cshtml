@model IEnumerable<SistemaBelleza.Models.producto>

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    ViewBag.Title = "Productos";
}

<!-- Bootstrap Icons y CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2 class="text-center my-4 text-primary"><i class="bi bi-bag-fill"></i> Gestión de Productos</h2>

<div class="text-end mb-3">
    <a href="@Url.Action("Crear", "Productos")" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nuevo Producto
    </a>
</div>

<table class="table table-bordered table-hover align-middle shadow-sm">
    <thead class="table-primary text-center">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Imagen</th>
            <th>Subcategoría</th>
            <th>Marca</th>
            <th>Tipo</th>
            <th>Género</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="10" class="text-center text-muted">No hay productos registrados.</td>
            </tr>
        }
        else
        {
            foreach (var p in Model)
            {
                <tr>
                    <td>@p.nombre</td>
                    <td>@p.descripcion</td>
                    <td>@($"{p.precio:N2} Bs")</td>
                    <td>@p.stock</td>
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(p.imagen))
                        {
                            <img src="@p.imagen" alt="Imagen" width="50" height="50" class="rounded shadow-sm" />
                        }
                        else
                        {
                            <span class="text-muted">Sin imagen</span>
                        }
                    </td>
                    <td>@(p.subcategoria?.nombre_subcategoria ?? "Sin subcategoría")</td>
                    <td>@(p.marca?.nombre ?? "Sin marca")</td>
                    <td>@p.tipo_producto</td>
                    <td>@p.genero</td>
                    <td class="text-center">
                        <a href="@Url.Action("Editar", "Productos", new { id = p.id_producto })" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="@Url.Action("Eliminar", "Productos", new { id = p.id_producto })" class="btn btn-sm btn-danger";">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
