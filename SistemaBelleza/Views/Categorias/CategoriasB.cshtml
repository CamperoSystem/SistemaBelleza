@model SistemaBelleza.Models.categoria

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    ViewBag.Title = "Eliminar Categoría";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<h2 class="text-center my-4 text-primary">
    <i class="bi bi-trash-fill"></i> Eliminar Categoría
</h2>

<div class="alert alert-danger">
    ¿Estás seguro que deseas eliminar la siguiente categoría?
</div>

<dl class="row">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Model.id_categoria</dd>

    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.nombre_categoria</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Model.descripcion</dd>
</dl>

@using (Html.BeginForm("Eliminar", "Categorias", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id_categoria)

    <div class="text-end">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3-fill"></i> Eliminar
        </button>
        <a href="@Url.Action("Index", "Categorias")" class="btn btn-secondary">Cancelar</a>
    </div>
}
