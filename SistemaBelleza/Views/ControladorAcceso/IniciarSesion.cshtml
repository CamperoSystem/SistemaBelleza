@{
    ViewBag.Title = "Inicio de sesión - Administrador";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/login.css" rel="stylesheet" />

<div class="container-fluid vh-100">
    <div class="row h-100">
        <!-- Lado izquierdo: Formulario -->
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="login-card p-4 shadow-lg">
                <h2 class="mb-4 text-center fw-bold">Bienvenido</h2>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error
                    </div>
                }

                <form method="post" action="@Url.Action("IniciarSesion", "ControladorAcceso")" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="correo" class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" id="correo" name="correo" placeholder="Ingrese su correo" required />
                        <div class="invalid-feedback">
                            Por favor, ingresa un correo válido.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="contraseña" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="contraseña" name="contraseña" placeholder="Ingrese su contraseña" required minlength="3" />
                        <div class="invalid-feedback">
                            La contraseña es obligatoria y debe tener al menos 3 caracteres.
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Recordarme por 30 días</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">Ingresar</button>

                    <div class="text-center">
                        <a href="#" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
                        <p class="mt-2">¿No tienes cuenta? <a href="#" class="text-decoration-none">Regístrate</a></p>
                    </div>
                </form>
            </div>
        </div>

        <!-- Lado derecho: Imagen + mensaje -->
        <div class="col-md-6 d-none d-md-flex align-items-center justify-content-center p-0">
            <div class="login-image h-100 w-100 d-flex flex-column justify-content-end text-white p-4">
               <img src="https://cuestionessociales.wordpress.com/wp-content/uploads/2013/06/belleza.jpeg" alt="Imagen de bienvenida" class="img-fluid h-100 w-100 object-fit-cover" />
                <div class="overlay-text p-3">
                    <h3 class="fw-bold">Da vida a tus ideas</h3>
                    <p>Regístrate gratis y disfruta acceso completo por 30 días. No se requiere tarjeta de crédito.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    (() => {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>
