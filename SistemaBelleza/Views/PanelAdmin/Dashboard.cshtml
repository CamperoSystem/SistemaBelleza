@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    var usuario = ViewBag.Usuario as string;
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/dashboard.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/dashboard.js"></script>
}

<div class="container py-5">
    <h1 class="text-center mb-3 fw-bold text-primary animate__animated animate__fadeInDown">Panel de Administración</h1>
    <p class="text-center mb-5 fs-5 text-muted animate__animated animate__fadeIn">
        ¡Bienvenido, <strong>@usuario</strong>! Aquí tienes un resumen del sistema.
    </p>

    <div class="row g-4">

        <div class="col-md-3">
            <div class="card dashboard-card bg-primary text-white animate__animated animate__zoomIn">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-4 mb-3"></i>
                    <h5 class="card-title">@ViewBag.TotalUsuarios</h5>
                    <p class="card-text">Usuarios</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card dashboard-card bg-info text-white animate__animated animate__zoomIn">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam display-4 mb-3"></i>
                    <h5 class="card-title">@ViewBag.TotalProductos</h5>
                    <p class="card-text">Productos</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card dashboard-card bg-success text-white animate__animated animate__zoomIn">
                <div class="card-body text-center">
                    <i class="bi bi-basket3-fill display-4 mb-3"></i>
                    <h5 class="card-title">@ViewBag.TotalOrdenes</h5>
                    <p class="card-text">Órdenes</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card dashboard-card bg-warning text-white animate__animated animate__zoomIn">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-4 mb-3"></i>
                    <h5 class="card-title">@ViewBag.TotalClientes</h5>
                    <p class="card-text">Clientes</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card dashboard-card bg-secondary text-white animate__animated animate__zoomIn">
                <div class="card-body text-center">
                    <i class="bi bi-tags-fill display-4 mb-3"></i>
                    <h5 class="card-title">@ViewBag.TotalCategorias</h5>
                    <p class="card-text">Categorías</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card dashboard-card bg-dark text-white animate__animated animate__zoomIn">
                <div class="card-body text-center">
                    <i class="bi bi-award-fill display-4 mb-3"></i>
                    <h5 class="card-title">@ViewBag.TotalMarcas</h5>
                    <p class="card-text">Marcas</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card dashboard-card bg-danger text-white animate__animated animate__zoomIn">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle-fill display-4 mb-3"></i>
                    <h5 class="card-title">@ViewBag.ProductosSinStock</h5>
                    <p class="card-text">Sin Stock</p>
                </div>
            </div>
        </div>

        <!-- NUEVO: Subcategorías -->
        <div class="col-md-3">
            <div class="card dashboard-card bg-teal text-white animate__animated animate__zoomIn">
                <div class="card-body text-center">
                    <i class="bi bi-collection-fill display-4 mb-3"></i>
                    <h5 class="card-title">@ViewBag.TotalSubcategorias</h5>
                    <p class="card-text">Subcategorías</p>
                </div>
            </div>
        </div>

    </div>
</div>
