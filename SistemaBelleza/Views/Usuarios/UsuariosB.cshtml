@model SistemaBelleza.Models.usuario

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    ViewBag.Title = "Eliminar Usuario";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2 class="text-center my-4 text-primary">
    <i class="bi bi-trash-fill"></i> Eliminar Usuario
</h2>

<div class="container">
    <p class="alert alert-danger">
        <strong>¿Estás seguro que deseas eliminar este usuario?</strong>
    </p>

    <dl class="row border p-3 rounded bg-light">
        <dt class="col-sm-3 text-dark">Nombre</dt>
        <dd class="col-sm-9">@Model.nombre</dd>

        <dt class="col-sm-3 text-dark">Correo</dt>
        <dd class="col-sm-9">@Model.correo</dd>

        <dt class="col-sm-3 text-dark">Teléfono</dt>
        <dd class="col-sm-9">@Model.telefono</dd>

        <dt class="col-sm-3 text-dark">Rol</dt>
        <dd class="col-sm-9">@Model.rol</dd>

        <dt class="col-sm-3 text-dark">Fecha Registro</dt>
        <dd class="col-sm-9">@(Model.fecha_registro?.ToString("dd/MM/yyyy"))</dd>
    </dl>

    @using (Html.BeginForm("Eliminar", "Usuarios", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id_usuario)

        <div class="mt-4 text-end">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash3"></i> Eliminar
            </button>
            <a href="@Url.Action("Index", "Usuarios")" class="btn btn-secondary ms-2">Cancelar</a>
        </div>
    }
</div>
